<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Register_screen">

    <ImageView
        android:layout_width="83dp"
        android:layout_height="118dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_account_circle_fill0_wght400_grad0_opsz48"

        />

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="515dp"
        android:layout_centerInParent="true"
        android:background="#10126A"
        android:orientation="vertical">

        <TextView
            android:layout_width="61dp"
            android:layout_height="41dp"
            android:layout_gravity="clip_horizontal"
            android:text="Name:"
            android:textColor="@color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_input"
            android:hint="Enter your name"
            android:padding="5dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="221dp"
            android:layout_height="30dp"
            android:layout_gravity="clip_horizontal"
            android:text="Create your password:"
            android:textColor="@color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_input"
            android:hint="Create your password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="221dp"
            android:layout_height="30dp"
            android:layout_gravity="clip_horizontal"
            android:text="Confirm your password:"
            android:textColor="@color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_input"
            android:hint="Confirm your password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:backgroundTint="#60D6CB"
            android:text="Register"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tv_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Already a user? Sign In"
            android:textColor="@color/white"

            />

    </LinearLayout>


</RelativeLayout>